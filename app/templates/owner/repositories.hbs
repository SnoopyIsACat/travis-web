<nav class='travistab-nav travistab-nav--underline'>
  <ul>
    <li>
      {{#link-to 'owner.repositories' (query-params tab=null)}}Repositories{{/link-to}}
    </li>
    <li>
      {{#link-to 'owner.repositories' (query-params tab='insights')}}Insights{{/link-to}}
    </li>
  </ul>
</nav>

{{#if isInsights}}
  <div class="travistab-body">
    <div class="insights-controls">
      <div class="insights-controls-left">
        {{insights-date-display interval=dataInterval}}
        <span class="insights-control-divider">|</span>
        {{insights-privacy-selector isPrivateViewable=isPrivateInsightsViewable includePrivate=includePrivateInsights setRequestPrivateInsights='setRequestPrivateInsights'}}
      </div>
      {{insight-tabs selectedTab=dataInterval setSubTab='setSubTab'}}
    </div>
    <div class="insights-grid">
      {{build-count owner=model.owner interval=dataInterval private=includePrivateInsights}}
      {{build-minutes owner=model.owner interval=dataInterval private=includePrivateInsights}}
      {{queue-times owner=model.owner interval=dataInterval private=includePrivateInsights}}
      {{active-repo-count owner=model.owner interval=dataInterval private=includePrivateInsights}}
      {{build-status-chart owner=model.owner interval=dataInterval private=includePrivateInsights setNoBuilds='setNoBuilds'}}
      {{#if hasNoBuilds}}
        <div class="insights-grid__overlay">
          <h2>Looks like you haven't triggered any builds</h2>
          <p>
            Lorem ipsum dolor, sit amet consectetur adipisicing elit. Commodi consequatur
            facere possimus ad temporibus eaque aliquid eligendi laudantium modi adipisci
            saepe explicabo eos natus expedita voluptate, nulla soluta distinctio perferendis.
          </p>
        </div>
      {{/if}}
    </div>
  </div>
{{else}}
  <ul class="owner-tiles">
    {{#each model as |repo|}}
      {{owner-repo-tile repo=repo}}
    {{else}}
      {{no-repos}}
    {{/each}}
  </ul>

  {{pagination-navigation collection=model route="owner.repositories" inner=6 outer=2}}
{{/if}}
